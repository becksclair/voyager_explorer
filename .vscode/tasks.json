{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "cargo tarpaulin --out Html",
      "windows": {
        "command": "cargo tarpaulin --out Html && start tarpaulin-report.html"
      },
      "linux": {
        "command": "cargo tarpaulin --out Lcov && xdg-open lcov.info"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
